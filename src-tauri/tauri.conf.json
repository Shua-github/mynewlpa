{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "My New LPA",
  "version": "0.1.0",
  "identifier": "io.github.Shua-github.mynewlpa",
  "build": {
    "frontendDist": "../dist/",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev:all",
    "beforeBuildCommand": "yarn build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "My New LPA",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "sidecar/lpac"
    ],
    "resources": [
      "lang/*"
    ]
  }
}
